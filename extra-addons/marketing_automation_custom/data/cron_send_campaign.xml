<odoo>
  <record id="ir_cron_auto_send_marketing" model="ir.cron">
    <field name="name">Auto Send Marketing Campaigns</field>
    <!-- ganti referensi model_id agar menunjuk ke mailing.mailing -->
    <field name="model_id" ref="mass_mailing.model_mailing_mailing"/>
    <field name="state">code</field>
    <field name="code">model._cron_send_campaigns()</field>
    <field name="interval_number">15</field>
    <field name="interval_type">minutes</field>
    <field name="active">True</field>
    <field name="numbercall">-1</field>
  </record>
</odoo>
